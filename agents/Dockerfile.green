FROM python:3.11-slim

# Install system dependencies for Playwright/Chromium
RUN apt-get update && apt-get install -y \
    wget curl git xvfb \
    libnss3 libnspr4 libatk1.0-0 libatk-bridge2.0-0 \
    libcups2 libdrm2 libatspi2.0-0 libxcomposite1 \
    libxdamage1 libxext6 libxfixes3 libxrandr2 libgbm1 \
    libxkbcommon0 libpango-1.0-0 libcairo2 libasound2 \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN adduser --disabled-password --gecos '' agentbeats
USER agentbeats
WORKDIR /home/agentbeats/app

# Copy requirements and install dependencies
COPY --chown=agentbeats:agentbeats requirements.txt .
RUN pip install --no-cache-dir --user -r requirements.txt

# Install Playwright browser
RUN python -m playwright install chromium
RUN python -m playwright install-deps chromium || true

# Copy application code
COPY --chown=agentbeats:agentbeats browsergym ./browsergym
COPY --chown=agentbeats:agentbeats agents/green_agent.py .
COPY --chown=agentbeats:agentbeats pyproject.toml .

# Set environment
ENV PATH="/home/agentbeats/.local/bin:${PATH}"
ENV PYTHONUNBUFFERED=1
ENV DISPLAY=:99

EXPOSE 8000

ENTRYPOINT ["python", "green_agent.py", "--a2a-server"]
CMD ["--host", "0.0.0.0", "--port", "8000"]
